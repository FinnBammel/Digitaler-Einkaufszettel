<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar2"
        android:layout_width="415dp"
        android:layout_height="88dp"
        android:layout_gravity="top"
        android:layout_marginBottom="-85dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="392dp"
        android:layout_height="66dp"
        android:backgroundTint="#9C27B0"
        android:text="KOCH-IDEEN"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Hinzufügen"
        app:layout_constraintTop_toBottomOf="@id/bottomAppBar2"
        app:layout_constraintStart_toEndOf="@id/entry2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="170dp"

        app:layout_constraintTop_toBottomOf="@id/bottomAppBar2"
        android:layout_marginTop="95dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/entry2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Ideen eingeben"
        app:layout_constraintTop_toBottomOf="@id/bottomAppBar2"
        android:layout_marginTop="55dp"/>
    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Alles Löschen"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="-650dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/entry2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Zurück"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="-650dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>